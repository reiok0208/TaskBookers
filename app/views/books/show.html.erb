<h1>Book detail</h1>

<div>
  <table>
    <tbody>
  	  <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size:'60x60' %></td>
  	    <td><%= @book.title %></td>
  	    <td><%= @book.body %></td>
        <td><% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book) %>
                <% end %></td>
        <td><% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: '削除しますか？' } %>
                <% end %></td>
  	  </tr>
    </tbody>
  </table>
  <p><%= @user.name %></p>
</div>