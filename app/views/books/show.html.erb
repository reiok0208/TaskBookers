<%= render 'users/infonew', book: @bookinfo, user: @userinfo %>

<h1>Book detail</h1>

<div>
  <table>
    <tbody>
  	  <tr>
        <td><%= link_to attachment_image_tag(@user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size:'60x60'), users_show_path(@book.user) %></td>
  	    <td><%= link_to @book.title, book_path(@book) %></td>
  	    <td><%= @book.body %></td>
        <td><% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book) %>
                <% end %></td>
        <td><% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: '削除しますか？' } %>
                <% end %></td>
  	  </tr>
    </tbody>
  </table>
  <p><%= link_to @user.name, users_show_path(@book.user) %></p>
</div>