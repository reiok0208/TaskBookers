<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/infonew', book: @bookinfo, user: @userinfo %>
    </div>
    <div class="col-xs-9">
      <h1>Book detail</h1>
      <div>
        <table class="table table-striped">
          <tbody>
            <tr>
              <td><%= link_to users_show_path(@book.user) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size:'60x60' %><br>
                    <%= @user.name %>
                  <% end %>
              </td>
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.body %></td>
              <td><% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book) %>
              <% end %></td>
              <td><% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: '削除しますか？' } %>
              <% end %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>