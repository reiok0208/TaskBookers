<%= render 'users/infonew', book: @bookinfo, user: @userinfo %>

<h1>Books</h1>
<table>
  <thead>
      <tr>
        <th> </th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
<% @books.each do |book| %>
  	  <tr>
        <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size:'60x60'), users_show_path(book.user) %></td>
  	    <td><%= link_to book.title, book_path(book), class: "pull-right" %></td>
  	    <td><%= book.body %></td>
  	  </tr>
      <% end %>
    </tbody>
  </table>