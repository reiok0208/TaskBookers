<h1>User info</h1>
<%= form_for(@user) do |f| %>
<div class="field-style">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
<div class="field-style">
  <%= f.label :introduction %>
  <%= f.text_area :introduction %>
</div>
<%= f.submit 'Update User' %>
<% end %>