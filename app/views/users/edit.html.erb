<% if flash[:danger] %>
  <% flash.each do |message_type, messages| %>
    <h2 class="error-name"><%= flash[:danger].count %>errors prohibited this obj from being saved:</h2>
    <% messages.each do |message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
  <% end %>
<% end %>

<h1>User info</h1>
<%= form_for(@user) do |f| %>
<div class="field-style">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
<div class="field-style">
  <%= f.label :introduction %>
  <%= f.text_area :introduction %>
</div>
<%= f.submit 'Update User' %>
<% end %>