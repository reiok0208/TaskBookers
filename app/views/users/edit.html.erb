<div class="container">
  <div class="row">
    <div class="col-lg-3">

      <h1>User info</h1>
      <%= form_for(@user) do |f| %>
      <div class="field-style">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div><br>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
      <div class="field-style">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction %>
      </div>
      <%= f.submit 'Update User' %>
      <% end %>
    </div>
    <div class="col-lg-9"></div>
  </div>
</div>