<h1>User info</h1>

<h1>New book</h1>
<%= form_for(@book) do |f| %>
<div class="field-style">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class="field-style">
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>
<%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<table>
  <% @users.each_with_index do |user,i| %>
  <% if i < 1 %>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <% end %>
  <tbody>
    <tr>
      <td>
        <%= user.profile_image_id %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td>
        <%= link_to "Show", users_show_path(user.id) %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>